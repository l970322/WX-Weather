
page{
  height: 100%;
  background-image: url("http://n.sinaimg.cn/sinacn02/443/w1600h2843/20180822/6a73-hhzsnea6063042.jpg");
  background-size: cover;
}
.content{
  font-family: 微软雅黑;
  font-size: 14px;
  height: 100%;
  width: 100%;
  color:white;
}
.headerr{
  color: #5D6D7E;
  padding: 26rpx;
  background-color: rgba(0,0,0,0.1);
  border-radius: 9rpx;
  width: 130rpx;
  margin: 20rpx;
  text-align: center;
  font-weight: 700;
}
.city{

  display: inline-block;
}
.date{
  float: right;
}
.today{
  color: #566573;
  text-align: center;
}
.weather{
  margin: 20rpx;
  font-size: 16px;
}
.temp{
  color: #808B96;
  font-size: 50px;
  margin-top: 100rpx;
}
.pm{
  margin: 20rpx;
  margin-top: 30rpx;
  font-size: 16px;
  text-align: left;
}
.future{
  display: flex;
  justify-content:space-around;
  height: 28%;
  padding-left: 5rpx;
  padding-top: 100rpx;
}
.future-item{
  color: #5D6D7E;
  font-weight: 700;
  text-align: center;
  min-height: 100%;
  width: 165rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border: 1px solid #A9DFBF;
  border-radius: 10px;
  padding: 20rpx;
  box-shadow: 10px 0px 2px rgba(0,0,0,0.2);
}
